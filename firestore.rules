
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read and write their own user profile
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow creating tasks if logged in, but only allow read/write by the assigned user.
    match /tasks/{taskId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && resource.data.assignedTo == request.auth.uid;
    }

    // Allow list read for tasks by any authenticated user for the dashboard view
    match /tasks {
        allow list: if request.auth != null;
    }

    // Allow logged-in users to manage their own uploaded files
    match /uploadedFiles/{fileId} {
      // User must be logged in and the employeeId on the new document must match their own UID
      allow create: if request.auth != null && request.resource.data.employeeId == request.auth.uid;

      // Allow any logged-in user to read the list of files and individual file documents
      allow read: if request.auth != null;

      // Only the user who created the record can update or delete it
      allow update, delete: if request.auth != null && resource.data.employeeId == request.auth.uid;
    }

    // Allow logged-in users to manage their own saved records
    match /savedRecords/{recordId} {
      // User must be logged in and the employeeId on the new document must match their own UID
      allow create: if request.auth != null && request.resource.data.employeeId == request.auth.uid;

      // Only the user who created the record can read, update, or delete it
      allow read, update, delete: if request.auth != null && resource.data.employeeId == request.auth.uid;
    }

    // Allow public creation of contact messages, but no reads/updates/deletes from client
    match /contact_messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
