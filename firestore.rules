
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    match /savedRecords/{docId} {
      // Any authenticated user can create a record for themselves.
      // This rule enforces that the employeeId in the document MUST match the UID of the person creating it.
      allow create: if isSignedIn() && request.resource.data.employeeId == request.auth.uid;
      
      // A user can read their own records.
      // Admins (software-engineer, ceo) can read any record.
      allow read: if isSignedIn() && 
        (resource.data.employeeId == request.auth.uid || 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'software-engineer', 'ceo']);

      // Any authenticated user can list records. The app logic will then filter by employeeId or role.
      allow list: if isSignedIn();
        
      // Update and delete are disabled to make records permanent, as requested.
      allow update, delete: if false;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
