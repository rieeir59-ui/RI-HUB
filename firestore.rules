
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserRole() {
      // This assumes you have a 'users' collection where roles are stored.
      // Make sure this path is correct for your data structure.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAuthorizedAdmin() {
      // Check if user is signed in before trying to get their role.
      return isSignedIn() && getUserRole() in ['admin', 'software-engineer', 'ceo'];
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    match /savedRecords/{docId} {
      // Any authenticated user can create a record for themselves.
      // This rule enforces that the employeeId in the document MUST match the UID of the person creating it.
      allow create: if isSignedIn() && request.resource.data.employeeId == request.auth.uid;
      
      // Users can read their own records.
      // Users with specific roles (admin, etc.) can read any record.
      allow read: if isSignedIn() && 
        (resource.data.employeeId == request.auth.uid || isAuthorizedAdmin());

      // Only authorized admin roles can list all documents in the collection.
      allow list: if isSignedIn();
        
      // To ensure data is permanent as requested, update and delete are disabled for now.
      // This prevents accidental deletion or modification.
      allow update, delete: if false;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
