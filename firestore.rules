
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAuthorizedAdmin() {
      let userRole = getUserRole();
      return userRole in ['admin', 'software-engineer', 'ceo'];
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    match /savedRecords/{docId} {
      // Only authenticated users can create records for themselves.
      allow create: if isSignedIn() && request.resource.data.employeeId == request.auth.uid;
      
      // Users can read their own records.
      // Admin, software-engineer, or ceo can read all records.
      allow read: if isSignedIn() && 
        (resource.data.employeeId == request.auth.uid || isAuthorizedAdmin());

      // Only authorized admins can list all records.
      allow list: if isSignedIn() && isAuthorizedAdmin();
        
      // Nobody can update or delete records directly for now.
      allow update, delete: if false;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
