rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // USERS: Only owner can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // TASKS: 
    // Any authenticated user can create a task.
    // Only the assigned user can read, update, or delete it.
    match /tasks/{taskId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && resource.data.assignedTo == request.auth.uid;
    }
    // Allow any logged in user to LIST tasks for dashboard views.
    // The client-side code is responsible for filtering tasks.
    match /tasks {
       allow read: if request.auth != null;
    }

    // UPLOADED FILES
    match /uploadedFiles/{fileId} {
      // Any authenticated user can upload a new file record
      allow create: if request.auth != null;
      // Any authenticated user can read file metadata (for dashboard views)
      allow read: if request.auth != null;
      // Only the employee who uploaded it can update or delete it
      allow update, delete: if request.auth != null && resource.data.employeeId == request.auth.uid;
    }

    // SAVED RECORDS (for forms)
    match /savedRecords/{recordId} {
      // Any authenticated user can save a record
      allow create: if request.auth != null;
      // Only the user who created it can read, update, or delete it.
      allow read, update, delete: if request.auth != null && resource.data.employeeId == request.auth.uid;
    }
    
    // BILL OF QUANTITIES
    match /billOfQuantities/{boqId} {
      allow read, write: if request.auth != null;
      match /items/{itemId} {
        allow read, write: if request.auth != null;
      }
      match /versions/{versionId} {
        allow read, write: if request.auth != null;
      }
    }

    // CONTACT MESSAGES: Public can create, but no one can read/update/delete from client
    match /contact_messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if false; 
    }
  }
}
