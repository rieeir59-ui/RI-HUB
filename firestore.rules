
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to all collections
    match /{document=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to write to any collection
    // Note: It's highly recommended to restrict write access to specific collections
    // and validate data for production apps.
    match /{document=**} {
      allow write: if request.auth != null;
    }
  }
}
