rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    match /savedRecords/{docId} {
      allow read, list: if isSignedIn() && (
        resource.data.employeeId == request.auth.uid || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department in ['admin', 'software-engineer', 'ceo']
      );
      allow create: if isSignedIn() && request.resource.data.employeeId == request.auth.uid;
      allow update, delete: if false;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
